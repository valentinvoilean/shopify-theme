        float: left;
        overflow: hidden;
    }

    .social_link {
        @include rem(margin-right, 20px);
        @include rem(line-height, $topnav-height);
        @include rem(font-size, 16px);

        &:last-child {
            margin-right: 0;
        }
    }
}
.topnav_message {
    @include rem(font-size, 11px);
    line-height: $topnav-height;
    height: $topnav-height;
    float: left;
}

.social_links + .topnav_message {
    &:before {
        @include rem(margin, 0 20px);
        content: "|";
    }
}
// Top Navigation: Currencies
#topnav {

    .currency__base {
        @include rem(font-size, $topnav-fontsize);
        float: right;
        line-height: $topnav-height;
        height: $topnav-height;
        position: relative;
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;

        .visible-md { cursor: pointer; }
    }

    .currency__inlineDisplay,
    .currency__FlyoutDisplay { display: none; }

    .currency__FlyoutDisplay { cursor: pointer; }

    .currency__value {

        &:after {
            @include topnavArrowDown();
            content: "";
        }
    }

    .currency__verticalList {
        @include rem(padding, 0 14px);
        list-style: none;
        overflow: hidden;
        margin: 0;
        position: absolute;
        top: calc(#{$topnav-height} + 2px);
        right: 0;
        border: rem(1px) solid;
        display: none;
        cursor: pointer;

        .currency__item {
            @include rem(line-height, 28px);
            @include rem(height, 28px);
            display: block;

            &:hover { text-decoration: underline; }
        }
    }

    .currency__horizontalList {
        list-style: none;
        overflow: hidden;
        display: none;
        padding: 0;
        margin: 0;
        float: left;

        &:after {
            @include topnavArrowDown();
            content: "";
            cursor: pointer;
            -moz-transition: all 0.5s ease;
            -webkit-transition: all 0.5s ease;
            -o-transition: all 0.5s ease;
            transition: all 0.5s ease;
        }

        .currency__item {
            line-height: rem($topnav-height);
            height: rem($topnav-height);
            display: inline-block;
            width: 0;
            float: left;
            cursor: pointer;
            overflow: hidden;
            -moz-transition: all 0.3s ease;
            -webkit-transition: all 0.3s ease;
            -o-transition: all 0.3s ease;
            transition: all 0.3s ease;
        }

        .currency__active {
            @include rem(margin-left, 10px);
            display: inline-block;
            cursor: pointer;
            width: auto;
        }
    }

    .currency__expandedList {

        &:after {
            -ms-transform: rotate(90deg);
            -webkit-transform: rotate(90deg);
            transform: rotate(90deg);
        }

        .currency__item {
            @include rem(margin-left, 10px);
            display: inline-block;
            width: auto;

            &:hover {
                text-decoration: underline;
            }
        }
    }

