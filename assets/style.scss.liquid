/* ==========================================================================
   Most theme settings should be stored in Sassy CSS variables here, for reuse.
   ========================================================================== */
/*!theme settings */
$background-color:        {{ settings.background_color }};
$text-color:              {{ settings.text_color }};
$link-color:              {{ settings.link_color }};
$link-active-color:       {{ settings.link_active_color }};
$headerBackgroundColor:   {{ settings.header_background_color }};
$topNavIconColor:         {{ settings.topnav_icon_color }};
$topNavLinkColor:         {{ settings.topnav_link_color }};
$borderColor:             {{ settings.border_color }};

/* Table of content */
/* 1.  Base styles
   2.  CSS transitions
   3.  Mixins
   4.  Header
*/

/* =====================
   1. Base styles
   ===================== */

html, body {
    background-color: $background-color;
    color: $text-color;
}

/* =====================
   2. CSS transitions
   ===================== */
%fadeInBackground {
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    box-shadow: 0 0 1px rgba(0, 0, 0, 0);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -moz-osx-font-smoothing: grayscale;
    overflow: hidden;
    -webkit-transition-duration: 0.3s;
    transition-duration: 0.3s;
    -webkit-transition-property: color, background-color;
    transition-property: color, background-color;
}

%growTransition {
    display: inline-block;
    vertical-align: middle;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    box-shadow: 0 0 1px rgba(0, 0, 0, 0);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -moz-osx-font-smoothing: grayscale;
    -webkit-transition-duration: 0.3s;
    transition-duration: 0.3s;
    -webkit-transition-property: transform;
    transition-property: transform;

    &:hover, &:focus, &:active {
        -webkit-transform: scale(1.3);
        transform: scale(1.3);
    }
}


/* =====================
   3. Mixins
   ===================== */
@mixin opacity($opacity) {
  opacity: $opacity;
  $opacity-ie: $opacity * 100;
  filter: alpha(opacity=$opacity-ie); //IE8
}


/* =====================
   4. Header
   ===================== */
#topnav {
    background: $headerBackgroundColor;

    .arrow-down {
        border-left-color: transparent;
        border-right-color: transparent;
        border-top-color: $topNavIconColor;
    }

    .social_link {
        @extend %fadeInBackground;
        @extend %growTransition;
        color: $topNavIconColor;
    }

    .email_address,
    .phone_number {
        @extend %fadeInBackground;
        color: $topNavLinkColor;
    }

    .social_links + .contact:before,
    .contact_item:after,
    .currency__base {
        color: $topNavLinkColor;
    }

    .currency__verticalList {
        background: rgba(255,255,255,0.9);
        border-color: $borderColor;

        .currency__item { color: $text-color; }
    }

    .currency__horizontalList {
        &:after {
            @extend .arrow-down;
        }
    }

    .currency__expandedList {

        &:after { border-top-color: $link-active-color; }

        .currency__active { color: $link-active-color; }
    }

}

.cart-link {
    color: $link-color;

    & > a { color: $link-color; }
}

