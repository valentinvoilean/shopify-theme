/* ==========================================================================
   Most theme settings should be stored in Sassy CSS variables here, for reuse.
   ========================================================================== */
/*!theme settings */
$background-color:        {{ settings.background_color }};
$text-color:              {{ settings.text_color }};
$link-color:              {{ settings.link_color }};
$headerBackgroundColor:   {{ settings.header_background_color }};
$topNavIconColor:         {{ settings.topnav_icon_color }};
$topNavLinkColor:         {{ settings.topnav_link_color }};

/* Table of content */
/* 1.  Base styles
   2.  CSS transitions
   3.  Mixins
   4.  Header
*/

/* =====================
   1. Base styles
   ===================== */

html, body {
    background-color: $background-color;
    color: $text-color;
}

/* =====================
   2. CSS transitions
   ===================== */
@import url("partials/core/_transitions.scss");


/* =====================
   3. Mixins
   ===================== */
@import url("partials/core/_color-mixins.scss");


/* =====================
   4. Header
   ===================== */
#topnav {
    background: $headerBackgroundColor;

    .arrow-down {
        border-left-color: transparent;
        border-right-color: transparent;
        border-top-color: $topNavIconColor;
    }

    .social_link {
        @extend %fadeInBackground;
        @extend %growTransition;
        color: $topNavIconColor;
    }

    .email_address,
    .phone_number {
        @extend %fadeInBackground;
        color: $topNavLinkColor;
    }

    .social_links + .contact:before,
    .contact_item:after,
    .currency__base {
        color: $topNavLinkColor;
    }

    .currency__list {
        background: rgba(255,255,255,0.9);
        border-color: #8d8d8d;
    }

    .currency__item {
        color: #000;

        &:hover { color: #8d8d8d; }
    }
}

.cart-link {
    color: $link-color;

    & > a { color: $link-color; }
}

