@import url("partials/_normalize.scss");

/* ==========================================================================
   Most theme settings should be stored in Sassy CSS variables here, for reuse.
   ========================================================================== */
/*!theme settings */
$base-font-family:        {{ settings.base_font_family }};
$base-font-size:          {{ settings.base_font_size }};
$base-font-weight:        {{ settings.base_font_weight }};
$heading-font-family:     $base-font-family;
$heading-font-weight:     600;

$rem-fallback: false !default;
$rem-px-only: false !default;

/* Table of content */
/* 1.  Functions
   2.  Mixins
   3.  Bootstrap Grid
   4.  Base styles
   5.  Header
*/

/* =====================
   1. Functions
   ===================== */
@import url("partials/_functions.scss");


/* =====================
   2. Mixins
   ===================== */
@import url("partials/_mixins.scss");


/* =====================
   3. Bootstrap Grid
   ===================== */
@import url("partials/_grid.scss");


/* =====================
   4. Base styles
   ===================== */
main, footer { @extend .container }

/* Contain floats: nicolasgallagher.com/micro-clearfix-hack/ */
.clearfix:before, .clearfix:after { content: ''; display: table; }
.clearfix:after { clear: both; }
.clearfix { zoom: 1; }
.clear { clear: both; }
.clear-after { *zoom: 1; }
.clear-after:after { content: ''; display: table; clear: both; }

html, body {
    font-size: em($base-font-size);
    font-weight: $base-font-weight;
    line-height: 1;
    font-family: $base-font-family;
}

h1, h2, h3, h4, h5, h6 {
    font-family: $heading-font-family;
    font-weight: $heading-font-weight;
    text-rendering: optimizeLegibility; /* to enable ligatures and kerning */
}

a { text-decoration: none; }

.txt-lt-sm { @include breakpoint(mobile) { text-align: left; } }
.txt-lt-md { @include breakpoint(tablet) { text-align: left; } }
.txt-lt-lg { @include breakpoint(desktop) { text-align: left !important; } }

.txt-rt-sm { @include breakpoint(mobile) { text-align: right; } }
.txt-rt-md { @include breakpoint(tablet) { text-align: right; } }
.txt-rt-lg { @include breakpoint(desktop) { text-align: right !important; } }

.txt-ct-sm { @include breakpoint(mobile) { text-align: center; } }
.txt-ct-md { @include breakpoint(tablet) { text-align: center; } }
.txt-ct-lg { @include breakpoint(desktop) { text-align: center !important; } }

/* =====================
   5. Header
   ===================== */
#topnav {
    @include rem(min-height, 30px);
    width: 100vw;
    font-size: 0; // fix the inline-block elements

    .social_links {
        display: inline-block;
        overflow: hidden;
    }

    .social_link {
        @include rem(margin-right, 5px);
        @include rem(line-height, 30px);
        @include rem(font-size, 16px);
    }

    .contact {
        display: inline-block;
        padding: 0;
    }

    .social_links + .contact {

        &:before {
            @include rem(margin-right, 10px);
            @include rem(margin-left, 10px);
            @include rem(font-size, 11px);
            @include rem(line-height, 30px);
            content: "|";
            float: left;
        }
    }

    .contact_item {
        @include rem(margin-right, 10px);
        float: left;

        &:after {
            @include rem(margin-left, 10px);
            @include rem(font-size, 11px);
            @include rem(line-height, 30px);
            content: "|";
            float: left;
        }

        &:last-child {
            margin-right: 0;

            &:after {
                content: "";
                margin-left: 0;
            }
        }
    }

    .email_address,
    .phone_number {
        @include rem(line-height, 30px);
        @include rem(font-size, 11px);
        float: left;
    }
}

.cart-link {
    @include rem(font-size, 11px);
    @include rem(line-height, 30px);
    float: right;

    .fa-shopping-cart {
        @include rem(margin-right, 5px);
        @include rem(font-size, 16px);
    }
}