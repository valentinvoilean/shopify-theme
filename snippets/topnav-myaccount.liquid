{% if shop.customer_accounts_enabled %}

    {% assign MA-flyoutMQ = '' %}
    {% assign MA-lightboxMQ = '' %}

    {% if settings.myaccount_mobile_style == 'flyout' %}
        {% capture MA-flyoutMQ %}{{ MA-flyoutMQ }}visible-xs {% endcapture %}
    {% elsif settings.myaccount_mobile_style == 'lightbox' %}
        {% capture MA-lightboxMQ %}{{ MA-lightboxMQ }}visible-xs {% endcapture %}
    {% endif %}

    {% if settings.myaccount_tablet_style == 'flyout' %}
        {% capture MA-flyoutMQ %}{{ MA-flyoutMQ }}visible-sm {% endcapture %}
    {% elsif settings.myaccount_tablet_style == 'lightbox' %}
        {% capture MA-lightboxMQ %}{{ MA-lightboxMQ }}visible-sm {% endcapture %}
    {% endif %}

    {% if settings.myaccount_desktop_style == 'flyout' %}
        {% capture MA-flyoutMQ %}{{ MA-flyoutMQ }}visible-md visible-lg{% endcapture %}
    {% elsif settings.myaccount_desktop_style == 'lightbox' %}
        {% capture MA-lightboxMQ %}{{ MA-lightboxMQ }}visible-md visible-lg{% endcapture %}
    {% endif %}

    <div class="MA">
        {% if customer %}
        <div class="MA-loggedInLinks">
            <a class="MA-myprofileLink" href="/account">My Account</a>
            <ul class="MA-customerLinks">
                <li><a href="/account">My Profile</a></li>
                <li><a href="/account">My Wishlist</a></li>
                <li><a href="{{ customer_logout_link }}">Log Out</a></li>
            </ul>
        </div>
        {% else %}

        <div class="MA-lightbox">
            <div class="container">
                <div class="MA-lightboxWrapper col-xs-10 col-sm-6 col-md-5 col-lg-4">
                    <h3 class="MA-lightboxTitle">Existing customer</h3>
                    <p class="MA-lightboxDescription">If you already have an account, please enter your e-mail address and password below.</p>
                    <form class="MA-lightboxForm clearfix" accept-charset="UTF-8" autocomplete="off" action="/account" method="post">
                        <input name="form_type" type="hidden" value="create_customer">
                        <input name="utf8" type="hidden" value="âœ“">
                        <div class="MA-lightboxInput">
                            <input type="text" name="customer[first_name]">
                            <label>First Name</label>
                        </div>

                        <div class="MA-lightboxInput">
                            <input type="text" name="customer[last_name]">
                            <label>Last Name</label>
                        </div>

                        <div class="MA-lightboxInput">
                            <input name="customer[email]" required onfocus="this.type='email'">
                            <label title="Email Address required.">Email</label>
                        </div>

                        <div class="MA-lightboxInput">
                            <input name="customer[password]" required onfocus="this.type='password'">
                            <label title="Password required.">Password</label>
                        </div>

                        <div class="MA-lightboxButton1">register</div>
                        <div class="MA-lightboxSeparator"></div>
                        <div class="MA-lightboxButton2">existing customer ?</div>
                    </form>
                    <div class="MA-closeBtn"><i class="fa fa-times"></i></div>
                </div>
            </div>
        </div>

        <div class="MA-lightboxLinks {{ MA-lightboxMQ }}">
            <a href="{{ customer_login_link }}" class="MA-loginLink">Log in</a>
            {% if shop.customer_accounts_optional %}
                /
                <a href="{{ customer_register_link }}" class="MA-registerLink">Join</a>
            {% endif %}
        </div>

        <ul class="MA-flyoutLinks {{ MA-flyoutMQ }}">
            <li><a class="MA-myprofileLink" href="/account">My Account</a></li>
            <li><a href="{{ customer_logout_link }}">Log Out</a></li>
            <li><a href="/account">My Wishlist</a></li>
            <li><a href="/account">My Profile</a></li>
        </ul>

        {% endif %}
    </div>
{% endif %}